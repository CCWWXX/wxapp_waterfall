page{
	background-color: #f5f5f5;
}
.goodsList-left{
    display: inline-block;
    vertical-align: top;
    padding-left: 10rpx;
    width: 48%;
    padding-bottom:20rpx;
}
.goodsList-right{
    display: inline-block;
    vertical-align: top;
    padding-left: 10rpx;
    width: 48%;
    margin-bottom:15rpx;
}
.float{
	position: relative;
	display: inline-block;
	margin-left: 0rpx;
	margin-top: 9rpx;
	height: 100%;
	box-sizing: border-box;
	box-shadow: 5rpx 5rpx 5rpx #E7E7E7;
	margin-bottom: 10rpx;
}
.goodsImage_wrap{
	width: 360rpx;
	height: 360rpx;
}
.float .goodsImage{
	z-index: 0;
	width: 360rpx;
	height: 360rpx;
	background: #f5f5f5 url('data:image/png;base64,') no-repeat center center;

}
.float .content{
	z-index: 99;
	background-color: #fff;
	width: 360rpx;
    /*box-shadow: 5rpx 5rpx 5rpx #E7E7E7;*/
    box-sizing: border-box;
    padding: 10rpx 10rpx;
}
.float .content .goodsName{
	width: 100%;
	height: 100%;
   line-height: 42rpx;
	margin-left: 6rpx;
	color: #535353;
	font-size: 30rpx;
	box-sizing: border-box;
	/*text-align: center;*/
}
.float .content .price{
	width: 100%;
	height: 42rpx;
	line-height: 42rpx;
	/*text-align: center;*/
	box-sizing: border-box;
	color: #85324c;
	font-size: 30rpx;
	margin-top: 10rpx;
}